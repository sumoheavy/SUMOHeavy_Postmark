 <config>
    <modules>
        <SUMOHeavy_Postmark>
            <version>2.0.0</version>
        </SUMOHeavy_Postmark>
    </modules>

    <global>
        <models>
            <postmark>
                <class>SUMOHeavy_Postmark_Model</class>
            </postmark>

            <core>
                <rewrite>
                    <email_template>SUMOHeavy_Postmark_Model_Core_Email_Template</email_template>
                </rewrite>
            </core>

            <!--
            /**
             * aheadworksRMA rewrites Mage_Core_Model_Email_Template,
             * what is causing not using Postmark integration.
             * This rewrite resolves problem.
             */
            -->
            <awrma>
                <rewrite>
                    <email_template>SUMOHeavy_Postmark_Model_Awrma_Email_Template</email_template>
                </rewrite>
            </awrma>
        </models>

        <helpers>
            <postmark>
                <class>SUMOHeavy_Postmark_Helper</class>
            </postmark>
        </helpers>
    </global>

    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <postmark>
                                            <title>Postmark Section</title>
                                        </postmark>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <postmark>
            <settings>
                <enabled>0</enabled>
            </settings>
        </postmark>
    </default>

    <phpunit>
        <suite>
            <modules>
                <SUMOHeavy_Postmark />
            </modules>
        </suite>
    </phpunit>
</config>
